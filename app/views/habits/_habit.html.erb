<br/>
<turbo-frame id="habit_<%= habit.id %>">
    <div class="habit">
        <h3>Habit name: <%= habit.name %></h3>
        <p>
            Every <%= habit.frequency_value %> <%= habit.frequency_unit.pluralize(habit.frequency_value) %>
        </p>
        <p>
            Start Date: <%= habit.start_date.strftime("%b %d, %Y") %>
        </p>
        <p>
            Status: <%= habit.habit_logs.first&.status || "No logs yet" %>
        </p>
        <% if habit.habit_logs.first&.status != "done" %>
            <%= button_to "Mark Done", quick_check_in_path(habit_id: habit.id), method: :post %>
        <% end %>

        <% unless show_page %>
            <%= button_to "See habit", habit_path(habit), method: :get %>
        <% end %>
    </div>